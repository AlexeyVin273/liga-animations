mixin header(headerMods, currentUrl)
  -
    const headerLinks = [
      {
        href: "map-1.html",
        text: "Карта 1"
      },
      {
        href: "map-2.html",
        text: "Карта 2"
      },
      {
        href: "map-3.html",
        text: "Карта 3"
      },
      {
        href: "map-4.html",
        text: "Карта 4"
      },
    ]

  header.header(class=headerMods, data-fix-block)
    .container
      if(currentUrl === "index.html")
        span.header__logo
          +icon("logo", "362", "67")
      else
        a.header__logo(href="index.html", aria-label="Переход на главную")
          +icon("logo", "362", "67")
      button.header__toggle(type="button", aria-label="Переключатель отображения меню", aria-pressed="false")
    nav.main-nav(data-fix-block)
      .container
        .main-nav__title-wrapper
          h2.main-nav__title Анимации
        .main-nav__list-wrapper
          ul.main-nav__list
            each link in headerLinks
              - const activeState = currentUrl === link.href
              li.main-nav__item(class={"is-active": activeState})
                if(activeState)
                  span.main-nav__link=link.text
                else
                  a.main-nav__link(href=link.href)=link.text
